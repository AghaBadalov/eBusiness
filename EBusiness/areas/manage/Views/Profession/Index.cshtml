@model List<Profession>
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <a asp-action="create" asp-controller="profession"  class="btn btn-success">Create</a>

        <tr>
            <th scope="col">count</th>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="update" asp-controller="profession" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-action="delete" asp-controller="profession" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

                
            </tr>
        }
        
    </tbody>
</table>